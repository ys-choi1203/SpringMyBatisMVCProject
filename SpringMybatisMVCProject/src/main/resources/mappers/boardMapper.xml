<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="mappers.boardMapper">
	<sql id="basecolumn">
		BOARD_NUM, USER_ID, BOARD_NAME, BOARD_PASS, 
		BOARD_SUBJECT, BOARD_CONTENT, BOARD_DATE, IP_ADDR, READ_COUNT
	</sql>
	
	<insert id="insertBoard" parameterType="model.BoardDTO">
		insert info board(<include refid="basecolumn" />)
		values(NUM_SEQ.nextval, #{userId}, #{boardName}, #{boardPass},
				#{boardSubject}, #{boardContent}, sysdate, #{ipAddr}, 0)
	</insert>
</mapper>
